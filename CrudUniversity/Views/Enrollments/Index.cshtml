@model IEnumerable<CrudUniversity.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registros de enrollements</h1>
<div class="mt-1 mb-1">
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
            <a class="btn btn-sm btn-success" asp-action="Index">Restaurar lista</a>
            <div class="input-group">
                <span class="input-group-text">Buscar por grado:</span>
                <select name="SearchGrade" class="form-control">
                    <option value="">All</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                </select>
                <input type="submit" value="Buscar" class="btn btn-dark" />
            </div>
    </div>
</form>
</div>
<p>
<a asp-action="Create" class="btn btn-dark">Crear enrollment</a>
</p>
<table class="table table-striped table-bordered table-secondary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th class="d-flex justify-content-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.LastName)
            </td>
                <td class="d-flex justify-content-around">
                    <a asp-action="Edit" class="btn btn-success shadow-lg p-1" asp-route-id="@item.EnrollmentID">Editar</a> |
                    <a asp-action="Details" class="btn btn-warning shadow-lg p-1" asp-route-id="@item.EnrollmentID">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger shadow-lg p-1" asp-route-id="@item.EnrollmentID">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
