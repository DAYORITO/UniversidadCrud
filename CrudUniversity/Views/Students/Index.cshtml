@model IEnumerable<CrudUniversity.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registros de estudiantes</h1>
<div class="mt-2 mb-2">
<form asp-action="Index" method="get" class="form-inline">
    <div class="input-group">
        <a class="btn btn-sm btn-success" asp-action="Index">Restaurar lista</a>
            <div class="input-group">
                <label class="input-group-text">Buscar por nombre:</label>
                <input type="text" name="SearchString"class="form-control" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Buscar" class="btn btn-dark" />
         </div>
    </div>

</form>
</div>
<p>
<a asp-action="Create" class="btn btn-dark">Crear estudiante</a>
</p>
<table class="table table-striped table-bordered table-secondary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th class="d-flex justify-content-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
                <td class="d-flex justify-content-around">
                    <a asp-action="Edit" class="btn btn-success shadow-lg p-1" asp-route-id="@item.ID">Editar</a> |
                    <a asp-action="Details" class="btn btn-warning shadow-lg p-1" asp-route-id="@item.ID">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger shadow-lg p-1" asp-route-id="@item.ID">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
